{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "src",
    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "typeRoots": ["node_modules/@types"],
  "exclude": ["node_modules", "lib", "**/__tests__", "**/__mocks__"],
  "includes": ["src/**/*.ts"]
}
